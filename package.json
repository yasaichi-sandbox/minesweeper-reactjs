{
  "name": "minesweeper-reactjs",
  "version": "1.0.0",
  "description": "A minesweeper clone implemented with React.js",
  "scripts": {
    "boot": "npm-run-all clean --parallel watch server",
    "build": "npm-run-all --parallel build:*",
    "build:css": "stylus src/stylesheets/main.styl -c -o dist/stylesheets",
    "build:html": "pug src --out dist",
    "build:js": "browserify src/javascripts/main.jsx -d --extension=.jsx -o dist/javascripts/app.js -p [minifyify --no-map] -t babelify",
    "clean": "rimraf dist && mkdir -p dist/javascripts dist/stylesheets",
    "deploy": "NODE_ENV=production npm-run-all clean build && gh-pages -d dist",
    "lint": "eslint src/javascripts --ext .js,.jsx",
    "server": "live-server dist --host localhost --no-browser --mount=/src:src --mount=/node_modules:node_modules",
    "update:apply": "npm run update:check -- --upgradeAll",
    "update:check": "npm-check-updates",
    "watch": "npm-run-all --parallel watch:*",
    "watch:css": "npm run build:css -- -m -w",
    "watch:html": "npm run build:html -- -w",
    "watch:js": "watchify src/javascripts/main.jsx -d --extension=.jsx -o dist/javascripts/app.js -p [minifyify --map app.js.map --output dist/javascripts/app.js.map] -t babelify"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:yasaichi/minesweeper-reactjs.git"
  },
  "author": "yasaichi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yasaichi/minesweeper-reactjs/issues"
  },
  "homepage": "https://github.com/yasaichi/minesweeper-reactjs",
  "dependencies": {
    "radium": "^0.18.1",
    "react": "^15.3.0",
    "react-dom": "^15.3.0"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "babel-register": "^6.11.6",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "eslint": "^3.2.2",
    "eslint-config-airbnb": "^10.0.0",
    "eslint-plugin-import": "^1.12.0",
    "eslint-plugin-jsx-a11y": "^2.0.1",
    "eslint-plugin-react": "^6.0.0",
    "gh-pages": "^0.11.0",
    "live-server": "^1.0.0",
    "minifyify": "^7.3.3",
    "normalize-styl": "^3.0.3",
    "npm-check-updates": "^2.8.0",
    "npm-run-all": "^2.3.0",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.5.4",
    "stylus": "^0.54.5",
    "watchify": "^3.7.0"
  }
}
